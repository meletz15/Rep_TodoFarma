{
  "info": {
    "name": "API REST Usuarios",
    "description": "Colección de Postman para testing de la API REST de usuarios",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.ok && response.datos && response.datos.token) {",
                  "        pm.collectionVariables.set('token', response.datos.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correo\": \"admin@dominio.com\",\n  \"contrasena\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Obtener Perfil",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/perfil",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "perfil"]
            }
          }
        },
        {
          "name": "Cambiar Contraseña",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contrasena_actual\": \"Admin123!\",\n  \"contrasena_nueva\": \"NuevaContrasena123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/cambiar-contrasena",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "cambiar-contrasena"]
            }
          }
        }
      ]
    },
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Crear Usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"correo\": \"juan@ejemplo.com\",\n  \"contrasena\": \"Contrasena123!\",\n  \"rol_id\": 2,\n  \"estado\": \"ACTIVO\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios"]
            }
          }
        },
        {
          "name": "Obtener Usuarios",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/usuarios?pagina=1&limite=10",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios"],
              "query": [
                {
                  "key": "pagina",
                  "value": "1"
                },
                {
                  "key": "limite",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Obtener Usuario por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/usuarios/1",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "1"]
            }
          }
        },
        {
          "name": "Actualizar Usuario",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan Actualizado\",\n  \"apellido\": \"Pérez Actualizado\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios/1",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "1"]
            }
          }
        },
        {
          "name": "Eliminar Usuario",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/usuarios/2",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "2"]
            }
          }
        },
        {
          "name": "Cambiar Contraseña Usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contrasena_nueva\": \"NuevaContrasena123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios/1/cambiar-contrasena",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "1", "cambiar-contrasena"]
            }
          }
        }
      ]
    },
    {
      "name": "Reportes",
      "item": [
        {
          "name": "Usuarios Activos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/reportes/usuarios/activos?pagina=1&limite=10",
              "host": ["{{base_url}}"],
              "path": ["api", "reportes", "usuarios", "activos"],
              "query": [
                {
                  "key": "pagina",
                  "value": "1"
                },
                {
                  "key": "limite",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Usuarios Inactivos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/reportes/usuarios/inactivos?pagina=1&limite=10",
              "host": ["{{base_url}}"],
              "path": ["api", "reportes", "usuarios", "inactivos"],
              "query": [
                {
                  "key": "pagina",
                  "value": "1"
                },
                {
                  "key": "limite",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Usuarios por Fecha",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/reportes/usuarios/por-fecha?desde=2024-01-01&hasta=2024-12-31",
              "host": ["{{base_url}}"],
              "path": ["api", "reportes", "usuarios", "por-fecha"],
              "query": [
                {
                  "key": "desde",
                  "value": "2024-01-01"
                },
                {
                  "key": "hasta",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Estadísticas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/reportes/estadisticas",
              "host": ["{{base_url}}"],
              "path": ["api", "reportes", "estadisticas"]
            }
          }
        }
      ]
    }
  ]
}
